<div class="notice"><%= messages.error ? messages.error : '' %></div>
<form action="/questions/<%= question.id %>" method="POST">

  <label for="question_name">Name:
   <input type="text" name="name"
    id="question_name" value="<%= question.name %>">
  </label>

  <label for="question_description">Question Text:
    <textarea name="description"
      id="question_description"><%= question.description %></textarea>
  </label>

  <label for="question_entryFunction">Entry Function Name:
    <input type="text" name="entryFunction"
      id="question_entryFunction" value="<%= question.entryFunction %>">
  </label>

  <label for="question_sampleInput">Sample Input/Output:
    <textarea name="sampleInput"
      id="question_sampleInput"><%= question.sampleInput %></textarea>
  </label>

  <label for="question_testInput">Test Input/Output:
    <textarea name="testInput"
      id="question_testInput"><%= question.testInput %></textarea>
  </label>

  <input type="submit" name="Save">
</form>